model Product {
    id          Int      @id @default(autoincrement())
    name        String
    description String?
    price       Float
    sku         String   @unique
    category    Category
    inStock     Boolean  @default(true)
    imageUrl    String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

enum Category {
    ELECTRONICS
    CLOTHING
    HOME
    OFFICE
    SPORTS
    BEAUTY
    FOOD
    OTHER
}
