{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Launch Both Services",
      "configurations": ["Server", "Client"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/server"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/client"
    }
  ]
}
